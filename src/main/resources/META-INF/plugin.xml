<idea-plugin>
    <id>com.github.julioxx22.magento2omicron</id>
    <name>magento2-omicron</name>
    <vendor>julioxx22</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.julioxx22.magento2omicron.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.julioxx22.magento2omicron.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.julioxx22.magento2omicron.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
